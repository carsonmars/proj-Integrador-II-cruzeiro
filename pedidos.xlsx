# Este arquivo conterá todos os pedidos.

import pandas as pd

# Crie DataFrames vazios com as colunas necessárias
pedidos_df = pd.DataFrame(columns=["pedido_id", "data_pedido", "cliente_id"])
produtos_df = pd.DataFrame(columns=["produto_id", "nome", "descricao", "preco"])
itens_pedido_df = pd.DataFrame(columns=["pedido_id", "produto_id", "quantidade"])

# Salve os DataFrames como arquivos Excel
with pd.ExcelWriter("pedidos.xlsx") as writer:
    pedidos_df.to_excel(writer, sheet_name="pedidos", index=False)
    produtos_df.to_excel(writer, sheet_name="produtos", index=False)
    itens_pedido_df.to_excel(writer, sheet_name="itens_pedido", index=False)
